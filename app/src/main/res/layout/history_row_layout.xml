<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <TextView
                style="@style/titleView"
                android:text="@string/str_from" />

            <TextView
                android:id="@+id/tv_hisfrom_value"
                style="@style/historyValueView"
                android:text="9348438" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <TextView
                style="@style/titleView"
                android:text="@string/str_to" />

            <TextView
                android:id="@+id/tv_histo_value"
                style="@style/historyValueView"
                android:text="9348438" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <TextView
                style="@style/titleView"
                android:text="@string/str_amount" />

            <TextView
                android:id="@+id/tv_hisamount_value"
                style="@style/historyValueView"
                android:text="9348438" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="=" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/tv_rate"
                style="@style/historyValueView"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="sdjkfdjk" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
